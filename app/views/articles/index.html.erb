<div class="container">
  <div class="header">
    <h1>Wikinimous</h1>
    <%= link_to "Add new article", new_article_path, class: "btn btn-ghost" %>
  </div>

  <div class="content">
      <% @articles.each do |article| %>
        <h2 class="title"><%= link_to article.title, article_path(article) %></h2>
        <p><%= article.content %></p>
      <% end %>
  </div>
</div>
